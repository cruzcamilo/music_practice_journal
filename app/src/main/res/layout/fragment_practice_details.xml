<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

            <TextView
                android:id="@+id/tv_last_practice_label"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/last_practice_label"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_last_practice"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={viewModel.lastPractice}"
                android:textColor="@color/black"
                tools:text="01/10/2020" />

            <TextView
                android:id="@+id/tv_total_time_label"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/total_time_label"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_total_time"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={viewModel.totalTime}"
                android:textColor="@color/black"
                tools:text="20:00" />

</LinearLayout>