<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/teal_200">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="128dp" />

        <TextView
            android:id="@+id/practice_fragment_type_tv"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Song" />

        <TextView
            android:id="@+id/practice_fragment_title_tv"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/practice_fragment_type_tv"
            app:layout_constraintStart_toStartOf="@+id/practice_fragment_type_tv"
            app:layout_constraintTop_toBottomOf="@+id/practice_fragment_type_tv"
            tools:text="Drowning - Post solo" />

        <TextView
            android:id="@+id/practice_fragment_last_practice_tv"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/practice_fragment_title_tv"
            app:layout_constraintStart_toStartOf="@+id/practice_fragment_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/practice_fragment_title_tv"
            tools:text="Last Practice: Yesterday" />

        <TextView
            android:id="@+id/music_fragment_current_tempo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/target_tempo_label"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/practice_fragment_target_tempo_label"
            app:layout_constraintTop_toBottomOf="@+id/guideline2" />

        <TextView
            android:id="@+id/practice_fragment_current_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/practice_fragment_target_tempo_label"
            app:layout_constraintStart_toStartOf="@+id/practice_fragment_target_tempo_label"
            app:layout_constraintTop_toBottomOf="@+id/practice_fragment_target_tempo_label"
            tools:text="120bpm" />

        <TextView
            android:id="@+id/music_fragment_target_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/music_fragment_current_tempo_label"
            app:layout_constraintStart_toStartOf="@+id/music_fragment_current_tempo_label"
            app:layout_constraintTop_toBottomOf="@+id/music_fragment_current_tempo_label"
            tools:text="160bpm" />


        <TextView
            android:id="@+id/practice_fragment_target_tempo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/last_tempo_label"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/music_fragment_current_tempo_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>